<div class='col-md-1'><%= conversation.name %></div>




<div class=" scaffold-line-buttons  col-md-2" >
  

  
    <%= form_with url: admin_conversation_path(conversation), html: {data: {'turbo-confirm': "Are you sure you want to delete #{ conversation.name }?"}, style: "display: inline-block;"}, method: :delete do |f| %>
      <%= f.submit "Delete".html_safe,  class: "delete-conversation-button btn btn-primary btn-sm" %>
    <% end %>
  

  
  <%= link_to "Edit <i class='fa fa-1x fa-list-alt'></i>".html_safe, edit_admin_conversation_path(conversation), disable_with: "Loading...", class: "edit-conversation-button btn btn-primary btn-sm" %>
  
</div>
